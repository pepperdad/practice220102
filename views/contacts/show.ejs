<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="contact contact-index">
      <h2>About <%= contact.name %></h2>
      <label>email</label> <span> <%= contact.email %></span>
      <br />
      <label>phone</label> <span><%= contact.phone %></span>
      <div class="contact-menu">
        <a href="/contacts/<%= contact._id %>/edit">Edit</a>
        <!-- 1 -->
        <form
          action="/contacts/<%= contact._id %>?_method=delete"
          method="post"
        >
          <!-- 2 -->
          <a
            href="#"
            onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;"
            >Delete</a
          >
        </form>
      </div>
    </div>
  </body>
</html>
